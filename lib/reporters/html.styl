@import ('//maxcdn.bootstrapcdn.com/font-awesome/4.1.0/css/font-awesome.min.css');

$bodyBackground = #F7F6F5;
$bodyTextColor = #DEDEDE;
$headingColor = #717171;
$sectionHeadingBackground = #C4E5E5;
$cellBorderColor = #DEDEDE;
$reportTextColor = #3C3C3C;

$suitesColor = #4B95A8;
$testsColor = #59B0C6;
$failedColor = #FD3F3E;
$passedColor = #2AC644;
$durationColor = #343A40;


fontAwesome($content="") {
	position:relative;
	&:before {
		content:$content;
		font-family: FontAwesome;
	    font-style: normal;
	    font-weight: normal;
	    text-decoration: inherit;
	    font-size: 18px;
	    position: absolute;
	    top: 10px;
	    left: 12px;
	    width:20px;
	}
}

testStatusIcon($bg, $color, $fa) {
	.testStatus {
		background:$bg;
		border-color:darken($bg, 20%);
		border-style:solid;
		border-width:1px;
		color:$color;
		fontAwesome($fa);
	}
}


body {
	background: $bodyBackground;
	color: $bodyTextColor;
	font-family: Verdana, Helvetica, Arial, sans-serif;
	font-size: 14px;
	padding-top:0;
	padding-bottom:2em;
}

.internReportContainer {
	margin:0 auto;
	width:75%;
}

h1,
h2 {
	color:$headingColor;
	font-weight: normal;
}


.summary {
	border-collapse: collapse;
	margin-bottom:2.5em;
	width:100%;

	.numeric {
		color:#fff;
		font-size:3em;
		padding-left:0;
		text-align: center;
		&.success,
		&.duration {
			font-size:2em;
		}
	}

	th {
		border-color:$bodyBackground;
		border-width:1px;
		border-radius:6px 6px 0 0;
		border-right:3px solid $bodyBackground;
		color:#fff;
		font-size:1.25em;
		font-weight:normal;
		padding:0.5em 0 0.5em 0;

		&.suites {
			background:darken($suitesColor, 20%);
		}
		&.tests {
			background:darken($testsColor, 20%);
		}
		&.failed {
			background:darken($failedColor, 20%);
		}
		&.success {
			background:darken($passedColor, 20%);
		}
		&.duration {
			background:darken($durationColor, 20%);
		}
	}

	td {
		border-radius:0 0 6px 6px;
		border-right:3px solid $bodyBackground;
		color:#fff;
		padding-left:30px;
		padding-bottom:0.25em;
		position:relative;
		width:20%;

		&.suites {
			background:$suitesColor;
		}
		&.tests {
			background:$testsColor;
		}
		&.failed {
			background:$failedColor;
		}
		&.success {
			background:$passedColor;
		}
		&.duration {
			background:$durationColor;
		}
	}
}

.report {
	background-color: #fff;
	border-collapse: collapse;
	color:$reportTextColor;
	width: 100%;

	td {
		padding: 0.7em;
		border-left: 1px solid $cellBorderColor;
		border-right: 1px solid $cellBorderColor;
	}

	.suite {
		background: $sectionHeadingBackground;

		td {
			border:1px solid darken(@background, 20%);
			&.title {
				font-size: 15px;
				font-weight: bold;
			}
		}
		testStatusIcon(darken($sectionHeadingBackground, 20%), darken($sectionHeadingBackground, 70%), "\f03a");
	}

	.testResult {
		transition:background 0.3s ease;

		td {
			border-width:1px;
			border-style: solid;
			border-color:$cellBorderColor;
		}

		&.passed {
			testStatusIcon(lighten($passedColor, 70%), $passedColor, "\f058")

			&:hover {
				background:lighten($passedColor, 90%);
			}
		}

		&.failed {
			background: lighten($failedColor, 65%);
			testStatusIcon(lighten($failedColor, 70%), $failedColor, "\f05e");
			td {
				border-color:lighten($failedColor, 40%);
				border-bottom:0;
			}
			.testStatus {
				border-bottom:0;
				border-color:lighten($failedColor, 40%);
			}
			&:hover {
				background:lighten(@background, 20%);
			}
		}

		&.lastTest {
			td,
			.testStatus {
				border-bottom:0;
			}
		}
	}
}

.testStatus {
	width:20px;
	border-bottom:0;
}

.duration {
	width: 100px;
}

.indent1 {
	padding-left: 2em;
}
.indent2 {
	padding-left: 4em;
}
.indent3 {
	padding-left: 6em;
}
.indent4 {
	padding-left: 8em;
}
.indent5 {
	padding-left: 10em;
}
